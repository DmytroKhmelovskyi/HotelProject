
@model Hotel.BL.Models.PaymentViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Payment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GuestId" class="control-label">Guest</label>
                @Html.DropDownList("GuestId", (IEnumerable<SelectListItem>)ViewBag.Guests, "--Select guest--", new { @class = "form-control" })
                <span asp-validation-for="GuestId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReservationId" class="control-label">Reservation</label>
                @Html.DropDownList("ReservationId", (IEnumerable<SelectListItem>)ViewBag.Reservations, "--Select reservation--", new { @class = "form-control" })
                <span asp-validation-for="ReservationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PayTime" class="control-label"></label>
                <input asp-for="PayTime" class="form-control" />
                <span asp-validation-for="PayTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
